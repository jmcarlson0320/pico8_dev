pico-8 cartridge // http://www.pico-8.com
version 41
__lua__
function _init()
 t=0
 x=64
 y=64
end


function _update()
 t+=1
end


function _draw()
 cls()
 local x_dft=drift(4,90,0)
 local y_dft=drift(2,60,0)
 pset(x+x_dft,y+y_dft,7)
end


function drift(amp,per,pha)
 return amp*sin(t/per+pha)
end
