--objects
objects={}

function make_object(k,x,y)
 local o={}
 o.k=k
 o.x=x
 o.y=y
 o.t=0
 o.max_t=30
 add(objects,o)
 return o
end

function update_objs()
 for o in all(objects) do
  o.t+=1
  if (o.t>o.max_t) then
   o.t=0
   o.k+=1
   if (o.k>2) then
    o.k=1
   end
  end
 end
end

function draw_objs()
 for o in all(objects) do
  spr(o.k,o.x,o.y)
 end
end
